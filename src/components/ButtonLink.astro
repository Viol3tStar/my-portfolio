---
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  link: string;
  icon?: string;
}

const { title, link, icon = "/blog-placeholder-1.jpg" } = Astro.props;
---

<a
  href={link}
  class="text-sm leading-5 font-semibold bg-slate-400/10 rounded-full py-1 px-3 flex items-center space-x-2 hover:bg-slate-400/20 dark:highlight-white/5">
  <!-- <Icon
    class="mr-2 text"
    name="linkedin-rounded-svgrepo-com"
  /> -->
  {title}
</a>
